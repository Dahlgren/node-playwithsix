#!/usr/bin/env node

var program = require('commander');

var pws = require('../src/pws');

program
  .parse(process.argv);

var mods = program.args;

if (!mods.length) {
  console.error("PlayWithSix dependencies requires at least one mod");
  process.exit(1);
}

pws.resolveDependencies(mods, function(err, mods) {
  if (err) {
    console.error(err);
    process.exit(1);
  } else {
    console.log(mods);
  }
});
