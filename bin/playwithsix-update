#!/usr/bin/env node

var program = require('commander')

var ProgressBar = require('./progressbar')
var pws = require('../src/pws')

program
  .option('--lite', 'use lite versions of mods where available')
  .option('-p, --path [value]', 'path to directory if other than cwd')
  .parse(process.argv)

if (!program.path) {
  program.path = process.cwd()
}

pws.checkOutdated(program.path, function (err, mods) {
  if (err) {
    console.error(err)
    process.exit(1)
  } else {
    var progressBar = new ProgressBar()

    pws.downloadMods(program.path, mods, {lite: program.lite === true}, function (err, mods) {
      if (err) {
        console.error(err)
        process.exit(1)
      }
    }).on('progress', function (progress) {
      progressBar.update(progress)
    })
  }
})
